  "installer": {
    "script": [
      "$fontDir = \"$env:LOCALAPPDATA\\Microsoft\\Windows\\Fonts\"",
      "$regPath = \"HKCU:\\Software\\Microsoft\\Windows NT\\CurrentVersion\\Fonts\"",
      "New-Item -ItemType Directory -Force -Path $fontDir | Out-Null",
      "Get-ChildItem \"$dir\\*.ttf\" | ForEach-Object {",
      "    $fontPath = \"$fontDir\\$($_.Name)\"",
      "    Copy-Item $_.FullName -Destination $fontPath -Force",
      "    New-ItemProperty -Path $regPath -Name \"$($_.BaseName) (TrueType)\" -Value $fontPath -PropertyType String -Force | Out-Null",
      "}"
    ]
  },
  "uninstaller": {
    "script": [
      "$fontDir = \"$env:LOCALAPPDATA\\Microsoft\\Windows\\Fonts\"",
      "$regPath = \"HKCU:\\Software\\Microsoft\\Windows NT\\CurrentVersion\\Fonts\"",
      "Get-ChildItem \"$dir\\*.ttf\" | ForEach-Object {",
      "    $fontPath = \"$fontDir\\$($_.Name)\"",
      "    Remove-ItemProperty -Path $regPath -Name \"$($_.BaseName) (TrueType)\" -ErrorAction SilentlyContinue",
      "    Remove-Item $fontPath -Force -ErrorAction SilentlyContinue",
      "}"
    ]
  }
}
